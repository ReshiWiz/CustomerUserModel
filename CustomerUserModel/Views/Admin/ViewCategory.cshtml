@using PagedList.Core;
@model PagedList.Core.IPagedList<CustomerUserModel.Models.Udemy.ViewCategory>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
	ViewData["Title"] = "ViewCategory";
	Layout = "~/Views/Shared/AdminMasterLayout.cshtml";
}

<h1 class="badge">View Category</h1>
<link href="~/Category/PagedList.cshtml" rel="stylesheet" />
<p class="display-6 text-center fw-bold text-danger">Categories</p>

@if (Model is not null)
{
	foreach (var items in Model)
	{
		<div class="col-lg-3 col-sm-12">
			<div class="card m-4 border-0 d-inline-flex w-75" style="border-radius: 24px; margin-left: 20px;">
				<img src="@Url.Content(items.Cat_Image)" />
				<h4 class="text-center text-center fw-bold text-decoration-none">@items.Cat_Name</h4>
				@Html.ActionLink("Delete", "DeleteCategory", new { id = items.Cat_Name }, new { @class = "btn btn-danger" })
			</div>
		</div>
	}
}

